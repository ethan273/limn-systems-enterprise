{
  "buildCommand": "prisma generate && next build",
  "functions": {
    "src/app/api/flipbooks/upload-pdf/route.ts": {
      "maxDuration": 60,
      "memory": 3008
    },
    "src/app/api/flipbooks/extract-pages/route.ts": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "crons": [
    {
      "path": "/api/jobs/health-check",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/jobs/expiration",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/jobs/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}
